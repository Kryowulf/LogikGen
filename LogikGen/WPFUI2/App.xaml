<Application x:Class="WPFUI2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFUI2"
             xmlns:utils="clr-namespace:WPFUI2.Utils"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <utils:CustomizableBooleanToVisibilityConverter
             x:Key="TrueAsVisibleConverter"
             True="Visible"
             False="Collapsed"/>
        <utils:CustomizableBooleanToVisibilityConverter
             x:Key="FalseAsVisibleConverter"
             True="Collapsed"
             False="Visible"/>
    </Application.Resources>
</Application>
